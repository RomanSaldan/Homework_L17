<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                style="@style/ContainerMarkerStyle">

    <ImageView
        style="@style/IvMarkerStyle"
        android:id="@+id/ivMarker_CML"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        style="@style/TvMarkerTitleStyle"
        android:id="@+id/tvTitle_CML"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tvDescription_CML"
        android:layout_alignEnd="@+id/tvDescription_CML"/>

    <TextView
        style="@style/TvMarkerDescriptionStyle"
        android:id="@+id/tvDescription_CML"
        android:layout_below="@+id/tvTitle_CML"
        android:layout_toRightOf="@+id/ivMarker_CML"
        android:layout_alignBottom="@+id/ivMarker_CML"/>

</RelativeLayout>