<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <fragment
            android:id="@+id/googleMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="com.google.android.gms.maps.MapFragment"/>

        <ImageButton
            style="@style/BtnZoomInStyle"
            android:id="@+id/btnZoomIn_AM"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <ImageButton
            style="@style/BtnZoomOutStyle"
            android:id="@+id/btnZoomOut_AM"
            android:layout_below="@+id/btnZoomIn_AM"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    <ImageButton
        style="@style/BtnLocationStyle"
        android:id="@+id/btnLocation_AM"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <ImageButton
        style="@style/BtnCleanStyle"
        android:id="@+id/btnClean_AM"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
